<?xml version="1.0" encoding="utf-8"?>
<Application>
  <Views Id="Views">
    <DetailView Id="起始页">
      <Layout Id="Layout">
        <TabbedGroup Id="Tabs">
          <LayoutGroup Id="辐射菜单">
            <LayoutItem Id="RadialMenu" ViewItem="RadialMenu" />
          </LayoutGroup>
        </TabbedGroup>
      </Layout>
    </DetailView>
    <DetailView Id="BusinessObject_DetailView_BOLogic">
      <Items Id="Items">
        <PropertyEditor Id="Properties" View="BusinessObject_Properties_ListView" />
      </Items>
    </DetailView>
    <DetailView Id="BusinessForm_DetailView">
      <Layout Id="Layout">
        <LayoutGroup Id="Main">
          <TabbedGroup Id="Info">
            <LayoutGroup Id="高级设置">
              <LayoutGroup Id="子表设置">
                <LayoutItem Id="ItemBusinessObject.IsAbstract" ViewItem="ItemBusinessObject.IsAbstract" />
                <LayoutItem Id="ItemBusinessObject.CanInherits" ViewItem="ItemBusinessObject.CanInherits" />
              </LayoutGroup>
              <LayoutGroup Id="主表设置">
                <LayoutItem Id="IsAbstract" ViewItem="IsAbstract" />
                <LayoutItem Id="CanInherits" ViewItem="CanInherits" />
              </LayoutGroup>
            </LayoutGroup>
            <LayoutGroup Id="常用设置">
              <LayoutGroup Id="子表设置">
                <LayoutGroup Id="R1">
                  <LayoutItem Id="ItemBusinessObject.Base" ViewItem="ItemBusinessObject.Base" />
                </LayoutGroup>
              </LayoutGroup>
              <LayoutGroup Id="主表设置">
                <LayoutGroup Id="R1">
                  <LayoutItem Id="Base" ViewItem="Base" />
                </LayoutGroup>
              </LayoutGroup>
            </LayoutGroup>
          </TabbedGroup>
        </LayoutGroup>
      </Layout>
    </DetailView>
  </Views>
  <ActionDesign Id="ActionDesign">
    <Actions Id="Actions">
      <Action Id="CompileProject" PaintStyle="CaptionAndImage" ImageName="Action_SimpleAction" ImageMode="UseItemImage" DefaultItemMode="LastExecutedItem" ShowItemsOnClick="False">
        <ChoiceActionItems Id="ChoiceActionItems">
          <ChoiceActionItem Id="生成项目" ImageName="Action_SingleChoiceAction" />
          <ChoiceActionItem Id="生成运行" ImageName="Action_ResumeRecording" />
        </ChoiceActionItems>
      </Action>
      <Action Id="SwitchProject" DefaultItemMode="LastExecutedItem" PaintStyle="CaptionAndImage" ImageName="BO_Categories" />
    </Actions>
  </ActionDesign>
</Application>